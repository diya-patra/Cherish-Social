{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "backend/vercel.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/vercel.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/.*",
            "dest": "frontend/index.html"
        }
    ]
}